<Page x:Class="Registeration_Login_Desktop_Application.DeletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registeration_Login_Desktop_Application"
      mc:Ignorable="d" 
        d:DesignHeight="660" d:DesignWidth="660"
  Title="DeletePage">

    <Grid Background="#FFF9F3F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Button Content="Delete" x:Name="btnDelete" Style="{StaticResource ResourceKey=btnSyle}" Height="42" Width="318" Background="#FF122FF0" Margin="23,28,0,0" Click="btnDelete_Click" Grid.Row="1" Grid.Column="1" />
        <Label Content="Phone Number:" Style="{StaticResource NormalLabStyle}" Margin="10,65,0,0" Height="36" Width="155" Background="#FF6174EE"/>
        <TextBox HorizontalAlignment="Left" x:Name="txtPhone" TextWrapping="Wrap" VerticalAlignment="Top" Width="317" Height="36" Margin="24,65,0,0" FontSize="22" TextChanged="txtPhone_TextChanged" Grid.Column="1"/>
    </Grid>
</Page>
